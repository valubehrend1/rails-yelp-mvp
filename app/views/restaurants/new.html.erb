<div class="container">
    <%= simple_form_for(@restaurant) do |f| %>
      <h1>Add a new Restaurant!</h1>

      <div class="form-group">
        <%= f.input :name, class: 'form-control', placeholder:"Name"%>
      </div>

      <div class="form-group">
        <%= f.input :address, class: 'form-control', placeholder:"Address" %>
      </div>

          <div class="form-group">
        <%= f.input :phone_number, class: 'form-control', placeholder: "Phone Number" %>
      </div>

      <div class="form-group">
        <%= f.text_field :category, class: 'form-control', placeholder: "Category" %>
      </div>
      <div class="form-group btn-submit">
        <%= f.submit class: 'btn btn-danger main-btns' %>
      </div>
    <% end %>
</div>
